.imgwrap{
    padding-top:80px;  
}
.imgW{
    position: relative; 
    width: 50%;
    float: left;
    height: 400px;
    text-align: center;    
    overflow: hidden;
}
.imgW .imgBox{
  transition: all 0.5s;
}
.wrap img{
    height: 100%;
    margin: 0 -100%;
}
.p18{
    color: #fff;
    font-size: 18px;
    position: absolute;
    width: 100%;
    bottom: 5px;      
}
/*图片hover蒙版信息*/
.mengban{
    background: #fff;
    opacity: 0.3;
    position: absolute;
    left:0;
    top:0;    
    width: 100%;
    height: 100%;
    display: none;
}
.inner_p{
   position: absolute;
   left:0;
   top:0;    
   width: 100%;
   height: 100%;
   display: none;
}
.inner_p p{
    width:50%;
    margin:0 auto;   
    overflow: hidden;   
}
.inner_p p:nth-child(1){
    margin-top:15%;
}
/*图片放大缩小的动画*/

