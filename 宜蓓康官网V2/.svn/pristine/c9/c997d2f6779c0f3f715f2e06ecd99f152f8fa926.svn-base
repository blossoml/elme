.imgwrap{
    padding-top:80px;  
}
.imgW{
    position: relative; 
    text-align: center;  
    width: 50%;
    float: left;
    height: 400px;
    text-align: center;    
    overflow: hidden;
}
.wrap img{
    height: 100%;
    margin: 0 -100%;
}
.p18{
    color: #fff;
    font-size: 18px;
    position: absolute;
    width: 100%;
    bottom: 5px;      
}
/*图片hover蒙版信息*/
.mengban{
    background: #fff;
    opacity: 0.3;
    position: absolute;
    left:0;
    top:0;    
    width: 100%;
    height: 100%;
    display: none;
}
.inner_p{
   position: absolute;
   left:0;
   top:0;    
   width: 100%;
   height: 100%;
   display: none;
}
.inner_p p{
    width:50%;
    margin:0 auto;   
    overflow: hidden;   
}
.inner_p p:nth-child(1){
    margin-top:15%;
}
/*图片放大缩小的动画*/
@keyframes bigger{
    from {
        -webkit-transform:scale(1);
        transform: scale(1)
    }   
    to {
        -webkit-transform: scale(1.1);
        transform:scale(1.1)
    }
}
@keyframes smaller{
    from {
        -webkit-transform:scale(1.1) linear;
        transform: scale(1.1) linear;
      }   
     to {
        -webkit-transform: scale(1) linear;
        transform:scale(1) linear;
      }
}
.bigger{
    animation:bigger 1s ;
    -webkit-animation:bigger 1s;    
}
.smaller{
    animation: smaller 1s ;   
    -webkit-animation:smaller 1s ;  
} 
.outW{
    width: 100%;
    height: 100%;
}
