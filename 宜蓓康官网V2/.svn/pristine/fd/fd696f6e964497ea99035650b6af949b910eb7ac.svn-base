/* 新闻列表主体 */
.news_list{
    width: 1200px;
    background-color: #fff;
    margin: 0 auto;
    position: relative;
}

/* 单条新闻 */
.news_item{
    width: 1200px;
    height: 220px;
    margin-bottom: 80px;
    background-color: rgba(255, 255, 255, 1);

    /* position: absolute; */
    /* top:200px; */

}
.news_body{
    width: 100%;
    height: 150px;
    padding: 35px;
}
.news_item_img{
    width: 200px;
    height: 150px;

    float: left;
}
.news_item_img:hover{
    cursor: pointer;
}
.news_description{
    width: 840px;
    height: 150px;
    float: right;
    position: relative;

}
.news_description .title{
    width: 100%;

    font-size: 18px;
    line-height: 12px;
    font-family: '微软雅黑';
    font-weight: 400;
    font-style: normal;
    text-align: left;
}
.news_description .summary{
    width: 100%;
    line-height: 24px;
    font-size: 14px;
    padding-top: 24px; 
}
.news_description .see_about{
    width: 140px;
    height: 40px;
    position: absolute;
    bottom: 0;
    left: 0;

    background-color: rgba(255, 255, 255, 1);
    box-sizing: border-box;
    border: 1px solid rgba(204, 204, 204, 1);
    font-family: '微软雅黑';
    font-weight: 400;
    font-style: normal;
}

/* 激活 */
.active{
    border: 1px solid #000;
    /* box-shadow:  */
}

