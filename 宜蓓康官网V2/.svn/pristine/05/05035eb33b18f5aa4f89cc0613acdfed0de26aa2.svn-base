$(document).ready(function () {
    var $items = $(".news_item");
    $items.hover(function () {
        // over
        $(this).addClass("active");
        $(this).stop().animate({
            top:"-20px"
        }, 500);

    }, function () {
        // out
        $(this).removeClass("active");
        $(this).stop().animate({
            top:"0"
        }, 500);
    }
    );
})

