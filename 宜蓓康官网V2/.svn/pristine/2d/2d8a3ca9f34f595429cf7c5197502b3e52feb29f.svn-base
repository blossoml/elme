.tu_li{
    margin-top:50px;
    margin-right: 30px;
    float: left;
    width: 380px;
    height: 426px;
    position: relative;
}
.tu_li:nth-child(3n+3){
    margin-right: 0;
}
.tu_li img{
    width: 380px;
    height: 286px;    
    display: hidden;
}
.tu_w{
    width: 380px;
    height: 286px;    
    transition: all 0.5s;
}
.word{
    width: 100%;
    height:140px;
    padding: 30px 20px 0;
    text-align: left;
}
.word p:first-of-type{
    font-size: 20px;
    line-height: 26px;
    margin-bottom: 19px;
}
.word p:last-of-type{
    font-size: 14px;
    line-height: 19px;   
    color: #999999;
}
