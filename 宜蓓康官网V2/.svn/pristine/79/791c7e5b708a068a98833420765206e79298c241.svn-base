.recruitment {
    width: 900px;
    margin: 0 auto;
}

.apply {
    padding: 50px 0;
    border-bottom: 1px solid #ddd;
}

.apply p {
    font-size: 18px;
    font-family: '微软雅黑 Bold', '微软雅黑 Regular', '微软雅黑';
    font-weight: 700;
}

.apply ul {
    padding: 36px 0;
}

.apply>ul>li {
    color: #333333;
    text-align: left;
    line-height: 36px;
    font-size: 14px;
    font-family: '微软雅黑';
    font-weight: 400;
    font-style: normal;
}

.position {
    padding: 50px 0;
    border-bottom: 1px solid #ddd;
}



.position .title{
    font-size: 18px;
    line-height: 12px;
}
.position .duty {
    font-size: 14px;
    line-height: 24px;
    padding: 24px 0;
    color: #999999;
}

.position .responsibility {
    font-size: 14px;
    line-height: 24px;
    color: #999999;
}